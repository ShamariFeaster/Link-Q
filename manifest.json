{
  "name": "Link-Q",
  "description": "Creates queue of links to check out later. No bookmarks. No Tabs",
  "version": "0.72",
  "icons" : {"16": "icon-16.png",
			"48": "icon-48.png",
			"128": "icon-128.png" },
  "permissions": ["contextMenus", "tabs","bookmarks"],
  "browser_action": {
    "default_icon": "icon-ba.png",
    "default_popup": "popup.html"
  },
    "options_page": "options.html",
    "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "queue-forward": {
      "suggested_key": { "default":"Ctrl+Shift+F",
                        "windows": "Ctrl+Shift+F", 
                        "mac": "Command+Shift+F" },
      "description": "Load Next Page In Queue"
    },
	"hover-add": {
      "suggested_key": { "default":"Ctrl+Shift+A",
                        "windows": "Ctrl+Shift+A", 
                        "mac": "Command+Shift+A" },
      "description": "Add Link You're Hovering Over To Queue"
    }
  },"content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["jquery.js","core.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "manifest_version": 2
}

